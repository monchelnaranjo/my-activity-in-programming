package monchel;

import java.util.Random;
import java.util.Scanner;

public class game {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        int playerScore = 0;
        int computerScore = 0;

        String[] choices = {"rock", "paper", "scissors"};

        System.out.println("üéÆ Rock Paper Scissors Game!");
        System.out.println("Type rock, paper, or scissors");
        System.out.println("Type exit to quit\n");

        while (true) {
            System.out.print("Your choice: ");
            String playerChoice = scanner.next().toLowerCase();

            if (playerChoice.equals("exit")) {
                break;
            }

            if (!playerChoice.equals("rock") &&
                !playerChoice.equals("paper") &&
                !playerChoice.equals("scissors")) {
                System.out.println("‚ùå Invalid choice!\n");
                continue;
            }

            String computerChoice = choices[random.nextInt(3)];
            System.out.println("Computer chose: " + computerChoice);

            if (playerChoice.equals(computerChoice)) {
                System.out.println("ü§ù It's a tie!");
            } else if (
                (playerChoice.equals("rock") && computerChoice.equals("scissors")) ||
                (playerChoice.equals("paper") && computerChoice.equals("rock")) ||
                (playerChoice.equals("scissors") && computerChoice.equals("paper"))
            ) {
                System.out.println("üéâ You win this round!");
                playerScore++;
            } else {
                System.out.println("üíª Computer wins this round!");
                computerScore++;
            }

            System.out.println("Score ‚Üí You: " + playerScore + " | Computer: " + computerScore);
            System.out.println();
        }

        System.out.println("\nFinal Score ‚Üí You: " + playerScore + " | Computer: " + computerScore);
        System.out.println("Thanks for playing! üëã");

        scanner.close();
    }
}
